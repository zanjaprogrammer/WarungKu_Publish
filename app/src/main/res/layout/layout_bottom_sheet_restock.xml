<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_bottom_sheet">

    <TextView
        android:id="@+id/tvRestockProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restock Barang"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah (Qty)"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRestockQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe Harga:"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgPriceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <RadioButton
            android:id="@+id/rbPerItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Per Barang"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rbTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Harga"/>
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilBuyPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Beli Per Barang (Rp)"
        android:layout_marginBottom="8dp"
        app:boxStrokeColor="#2E7D32"
        app:prefixText="Rp ">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRestockBuyPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: Rp 0"
        android:textSize="14sp"
        android:textColor="#757575"
        android:textAlignment="textEnd"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnRestockSave"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="SIMPAN"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/bg_button_primary_gradient"
        android:textColor="@android:color/white"
        android:elevation="8dp"
        android:stateListAnimator="@null"/>

</LinearLayout>

